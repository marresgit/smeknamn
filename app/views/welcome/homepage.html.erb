
<h3>Go ahead and search for names or nicknames</h3>

<div class="search-bar">
  <%= form_tag(root_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>

<div class="search-result">
  <% if params[:search].present? %>
    <% if @nickname.present? %>
      <% @nickname.each do |nicknames| %>
        <%= nicknames.name %>
        <%= nicknames.nick %>
        <%= nicknames.nicknametwo %>
        <%= nicknames.nicknamethree %>
        <%= nicknames.nicknamefour %>
        <%= nicknames.nicknamefive %>
      <% end %>
    <% else %>
      <p>There is no <%= params[:search] %> in the database .</p>
    <% end %>
  <% end %>
</div>